{
  "name": "devops-project",
  "version": "1.0.0",
  "description": "A comprehensive DevOps project demonstrating Git workflow best practices",
  "main": "src/api/server.js",
  "scripts": {
    "start": "node src/api/server.js",
    "dev": "nodemon src/api/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "npm run build:api && npm run build:web",
    "build:api": "echo 'Building API...'",
    "build:web": "echo 'Building Web App...'",
    "docker:build": "docker build -t devops-project .",
    "docker:run": "docker run -p 3000:3000 devops-project",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production"
  },
  "keywords": [
    "devops",
    "git",
    "ci-cd",
    "docker",
    "kubernetes",
    "terraform"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}